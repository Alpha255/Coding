<XMLShader>
	<eVertexShader>
    <eInput>
      <attribute type = "vec3" name = "InPosition" usage = "POSITION"/>
      <attribute type = "vec3" name = "InColor" usage = "COLOR"/>
    </eInput>
    <eOutput>
      <attribute type = "vec3" name = "OutColor" usage = "COLOR"/>
      <attribute type = "vec4" name = "OutPosition" usage = "SV_POSITION"/>
    </eOutput>
		<eResourceBinding>
			<eUniformBuffer slot = "0">
				<attribute type = "mat4" name = "WorldMatrix"/>
				<attribute type = "mat4" name = "ViewMatrix"/>
				<attribute type = "mat4" name = "ProjectionMatrix"/>
				<attribute type = "vec3" name = "Color"/>
			</eUniformBuffer>
		</eResourceBinding>
		<eCode>
			<![CDATA[
      "OutColor = InColor;"
      "OutPosition = WorldMatrix * ViewMatrix * ProjectionMatrix * vec4(InPosition.xyz, 1.0f);"
      ]]>
		</eCode>
	</eVertexShader>

	<eFragmentShader>
		<eInput>
			<attribute Type = "vec3" name = "InColor"/>
		</eInput>
		<eOutput>
			<attribute Type = "vec4" name = "OutFragColor"/>
		</eOutput>
		<eCode>
			<![CDATA[
      "OutFragColor = vec4(InColor, 1.0f);"
      ]]>
		</eCode>
	</eFragmentShader>
</XMLShader>